// Rende+ Expense Tracker - Prisma Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  monthlyIncome Float     @default(0)
  discreteMode  Boolean   @default(false)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  expenses      Expense[]
  categories    Category[]
  debts         Debt[]
  budgets       Budget[]
}

model Category {
  id        String    @id @default(cuid())
  userId    String?   // null = default category
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  emoji     String
  isDefault Boolean   @default(false)
  createdAt DateTime  @default(now())
  
  expenses  Expense[]
  budgets   Budget[]
  
  @@index([userId])
}

model Expense {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  amount      Float
  note        String?
  date        DateTime  @default(now())
  month       Int       @default(1) // 1-12 (Janeiro=1, Dezembro=12)
  year        Int       @default(2024) // 2024, 2025, etc
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Link to debt installment if from debt payment
  installmentId String?
  installment   DebtInstallment? @relation(fields: [installmentId], references: [id])
  
  @@index([userId])
  @@index([categoryId])
  @@index([date])
  @@index([userId, month, year])
}

model Debt {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  totalAmount     Float
  installmentCount Int
  installmentValue Float
  firstDueDate    DateTime
  status          String    @default("active") // active | paid_off
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  installments    DebtInstallment[]
  
  @@index([userId])
  @@index([userId, status])
}

model DebtInstallment {
  id          String    @id @default(cuid())
  debtId      String
  debt        Debt      @relation(fields: [debtId], references: [id], onDelete: Cascade)
  number      Int       // e.g., 1, 2, 3...
  amount      Float
  dueDate     DateTime
  isPaid      Boolean   @default(false)
  paidAt      DateTime?
  createdAt   DateTime  @default(now())
  
  expenses    Expense[]
  
  @@index([debtId])
}

model Budget {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  monthlyLimit Float
  month       Int       // 1-12
  year        Int       // e.g., 2024
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([userId, categoryId, month, year])
  @@index([userId])
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String   // 6-digit code
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([email])
  @@index([code])
}
